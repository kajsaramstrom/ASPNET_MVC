@model NewsletterViewModel

<section class="sign-up-for-newsletters">
    <a id="subscribe-action"></a>
    <div class="container">
        <div class="title">
            <h1>Don't Want to Miss Anything?</h1>
            <img src="images/icon/arrows.svg" alt="arrow pointing down">
        </div>

        <form method="post" asp-controller="Home" asp-action="Newsletter" novalidate>
            <div class="signup">
                <h5>Sign up for Newsletters</h5>

                <div class="checkbox-group">
                    <div>
                        <input asp-for="Newsletter.DailyNewsletter" />
                        <label asp-for="Newsletter.DailyNewsletter"></label>
                    </div>

                    <div>
                        <input asp-for="Newsletter.AdvertisingUpdates" />
                        <label asp-for="Newsletter.AdvertisingUpdates"></label>
                    </div>

                    <div>
                        <input asp-for="Newsletter.WeekinReview" />
                        <label asp-for="Newsletter.WeekinReview"></label>
                    </div>

                    <div>
                        <input asp-for="Newsletter.EventUpdates" />
                        <label asp-for="Newsletter.EventUpdates"></label>
                    </div>

                    <div>
                        <input asp-for="Newsletter.StartupsWeekly" />
                        <label asp-for="Newsletter.StartupsWeekly"></label>
                    </div>

                    <div>
                        <input asp-for="Newsletter.Podcasts" />
                        <label asp-for="Newsletter.Podcasts"></label>
                    </div>
                </div>
            </div>

            <div class="subscribe">
                <i class='fa-regular fa-envelope'></i>
                <div class="input">
                    <span asp-validation-for="Newsletter.Email"></span>
                    <input asp-for="Newsletter.Email" />
                    <button class="btn-theme-s" type="submit">Subscribe *</button>
                </div>
            </div>
            <div class="text-under">
                <p><span>*</span> Yes, I agree to the <a class="blue-link" href="#">terms</a> and <a class="blue-link" href="#">privacy policy</a>.</p>
                <p><span>**</span> Don't want to get anymore news from us? <a asp-controller="Home" asp-action="UnSubscribe" class="blue-link">Unsubscribe here</a>.</p>

                @if (!string.IsNullOrEmpty(TempData["StatusFail"]?.ToString()))
                {
                    <div class="alert">
                        @TempData["StatusFail"]
                    </div>
                }

                @if (!string.IsNullOrEmpty(TempData["Status"]?.ToString()))
                {
                    <div class="success">
                        @TempData["Status"]
                    </div>
                }
            </div>
        </form>
    </div>
</section>

@await Html.PartialAsync("_ValidationScriptPartial")