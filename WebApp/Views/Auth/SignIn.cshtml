@model SignInViewModel
@{
    ViewData["Title"] = Model.Title;
}

<section id="sign-in">

    <div class="container">

        <form method="post" asp-controller="Auth" asp-action="SignIn" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>
            <div class="error">
                @ViewData["ErrorMessage"]
            </div>

            <h1>Welcome Back</h1>
            <p>Don’t have an account yet?<a asp-controller="Auth" asp-action="SignUp"> Sign up here.</a>.</p>

            <div class="content">

                <div id="form-email" class="input-group">
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email"></span>
                    <input asp-for="Email" />
                </div>

                <div id="form-password" class="input-group">
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password"></span>
                    <input asp-for="Password" />
                </div>

                <div id="form-remember" class="checkbox">
                    <div class="checkbox-group">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe"></label>
                    </div>
                </div>

                <button id="form-button" class="btn-theme-s" type="submit">@Model.Title</button>
                <a id="form-forgot-password" asp-controller="Account" asp-action="Forgot">Forgot your password?</a>
            </div>

            <hr />

            <div class="signinwithfacebook-google">
                <h6>Or sign in with your social network</h6>

                <div class="button">
                    <a class="btn-gray" asp-action="Google"><i class="fa-brands fa-google"></i> Google</a>
                    <a class="btn-gray" asp-action="Facebook"><i class="fa-brands fa-facebook-f"></i> Facebook</a>
                </div>
            </div>
        </form>
    </div>
</section>

@await Html.PartialAsync("_ValidationScriptPartial")
