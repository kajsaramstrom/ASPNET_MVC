@model AccountDetailsViewModel
@{
    ViewData["Title"] = $"{Model.User.FirstName} {Model.User.LastName}";
}

<div class="container">
    <section id="account-details">
        <aside>
            <div class="profile">
                <img src="@Model.User.ProfileImage" alt="@($"{Model.User.FirstName} {Model.User.LastName}")" />
                <h5>@Model.User.FirstName @Model.User.LastName</h5>
                <p>@Model.User.Email</p>
            </div>

            <nav>
                <a class="btn-theme active" asp-controller="Account" asp-action="Details"><i class="fa-regular fa-gear"></i> Account Details</a>
                <a class="btn-theme" asp-controller="Account" asp-action="Security"><i class="fa-regular fa-lock"></i> Security</a>
                <a class="btn-theme" asp-controller="Account" asp-action="SavedCourses"><i class="fa-regular fa-bookmark"></i> Saved Courses</a>
                <a class="btn-theme" asp-controller="Account" asp-action="SignOut"><i class="fa-regular fa-arrow-right-from-bracket"></i> Sign out</a>
            </nav>
        </aside>

        <div class="details">
            <section class="basic-info">

                <form method="post" asp-controller="Account" asp-action="Details" novalidate>

                    <h2>Account Details</h2>
                    <h5>Basic Info</h5>

                    <div class="content">

                        <div id="form-firstname" class="input-group">
                            <label asp-for="User.FirstName"></label>
                            <span asp-validation-for="User.FirstName"></span>
                            <input asp-for="User.FirstName" />
                        </div>

                        <div id="form-lastname" class="input-group">
                            <label asp-for="User.LastName"></label>
                            <span asp-validation-for="User.LastName"></span>
                            <input asp-for="User.LastName" />
                        </div>

                        <div id="form-email" class="input-group">
                            <label asp-for="User.Email"></label>
                            <span asp-validation-for="User.Email"></span>
                            <input asp-for="User.Email" />
                        </div>

                        <div id="form-phone" class="input-group">
                            <label asp-for="User.PhoneNumber"></label>
                            <span asp-validation-for="User.PhoneNumber"></span>
                            <input asp-for="User.PhoneNumber" />
                        </div>

                        <div id="form-bio" class="input-group">
                            <label>Biography <span>(optional)</span></label>
                            <span asp-validation-for="User.Bio"></span>
                            <textarea asp-for="User.Bio"></textarea>
                        </div>

                        <div class="form-buttons">
                            <button class="btn-gray" type="reset">Cancel</button>
                            <button class="btn-theme-s" type="submit">Save changes</button>
                        </div>
                    </div>
                </form>
            </section>

            <hr />

            <section class="address-info">

                <form method="post" asp-controller="Account" asp-action="Details" novalidate>

                    <h5>Address Info</h5>

                    <div class="content">

                        <div id="form-addressline-1" class="input-group">
                            <label asp-for="AddressInfo.AddressLineOne"></label>
                            <span asp-validation-for="AddressInfo.AddressLineOne"></span>
                            <input asp-for="AddressInfo.AddressLineOne" />
                        </div>

                        <div id="form-addressline-2" class="input-group">
                            <label>Address line 2 <span>(optional)</span></label>
                            <span asp-validation-for="AddressInfo.AddressLineTwo"></span>
                            <input asp-for="AddressInfo.AddressLineTwo" />
                        </div>

                        <div id="form-postalcode" class="input-group">
                            <label asp-for="AddressInfo.PostalCode"></label>
                            <span asp-validation-for="AddressInfo.PostalCode"></span>
                            <input asp-for="AddressInfo.PostalCode" />
                        </div>

                        <div id="form-city" class="input-group">
                            <label asp-for="AddressInfo.City"></label>
                            <span asp-validation-for="AddressInfo.City"></span>
                            <input asp-for="AddressInfo.City" />
                        </div>

                        <div class="form-buttons">
                            <button class="btn-gray" type="reset">Cancel</button>
                            <button class="btn-theme-s" type="submit">Save changes</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </section>
</div>

@await Html.PartialAsync("_ValidationScriptPartial")

